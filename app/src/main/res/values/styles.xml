    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Define a cor da borda usando uma lista de estados -->
        <item name="boxStrokeColor">@color/white</item>

        <!-- Para evitar a mudança de cor ao focar -->
        <item name="strokeColor">@color/white</item>

        <!-- Cor do hint (texto de dica) -->
        <item name="hintTextColor">@color/white</item>

        <!-- Cor do background da caixa -->
        <item name="boxBackgroundColor">@android:color/transparent</item>

        <!-- Cor do texto dentro do campo -->
        <item name="android:textColorHint">@color/white</item>


    </style>


    <!-- Estilo para TextInputEditText -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">

        <!-- Cor do hint quando o campo não está ativo -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Cor do texto digitado  -->
        <item name="android:textColor">@color/white</item>

    </style>

